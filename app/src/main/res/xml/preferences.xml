<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="SETTINGS"></PreferenceCategory>

    <EditTextPreference
        android:hint="@string/set_password"
        android:inputType="textPassword"
        android:key="password"
        android:summary="@string/set_password"
        android:title="Password" />

    <PreferenceCategory android:title="SECURITY SETTINGS"></PreferenceCategory>
    <CheckBoxPreference
        android:key="screenLock"
        android:summary="Lock The Screen With Password"
        android:title="Screen Lock"></CheckBoxPreference>
    <ListPreference
        android:entries="@array/reminder"
        android:entryValues="@array/reminder_values"
        android:key="keyReminder"
        android:summary="Set Update Reminder Frequency"
        android:title="Reminder for Updation">

    </ListPreference>

</PreferenceScreen>